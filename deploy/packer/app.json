{
  "description": "taskcluster docker worker vm",

  "variables": {
    "docker_worker":        "",
    "source_ami":           "ami-49324a79",
    "environment":          "",
    "loggly_account":       "",
    "loggly_auth":          "",
    "update_type":          "static",
    "fs_type":              "aufs",
    "papertrail":           ""
  },
  "provisioners": [
    {
      "type":           "file",
      "source":         "deploy/packer/app/scripts/configure-syslog.py",
      "destination":    "/tmp/loggly.py"
    },
    {
      "type": "shell",
      "inline": [
        "chmod u+x /tmp/loggly.py",
        "sudo python /tmp/loggly.py setup -y -s {{user `loggly_account`}} -a {{user `loggly_auth`}}"
      ]
    },
    {
      "type":           "file",
      "source":         "{{user `docker_worker`}}",
      "destination":    "/tmp/{{user `docker_worker`}}"
    },
    {
      "type":           "file",
      "source":         "deploy/packer/app/scripts/deploy.sh",
      "destination":    "/tmp/deploy.sh"
    },
    {
      "type":           "shell",
      "inline": [
        "sudo apt-get install -y git lvm2 linux-image-extra-`uname -r`"
      ]
    },
    {
      "type":           "file",
      "source":         "deploy/packer/app/docker-worker-{{user `update_type`}}.conf",
      "destination":    "/tmp/docker-worker.conf"
    },
    {
      "type":           "file",
      "source":         "{{user `environment`}}",
      "destination":    "/tmp/docker-worker"
    },
    {
      "type":           "file",
      "source":         "deploy/packer/app/etc/default/docker-{{user `fs_type`}}",
      "destination":    "/tmp/docker"
    },
    {
      "type":           "shell",
      "inline":         ["chmod u+x /tmp/deploy.sh"]
    },
    {
      "type":           "shell",
      "environment_vars": ["PAPERTRAIL={{user `papertrail`}}"],
      "inline": [
        "/tmp/deploy.sh /tmp/{{user `docker_worker`}} /tmp/docker-worker.conf /tmp/docker-worker /tmp/docker"
      ]
    }
  ],
  "builders": [
    {
      "type":           "amazon-ebs",
      "region":         "us-west-2",
      "source_ami":     "{{user `source_ami`}}",
      "instance_type":  "m3.large",
      "ssh_username":   "ubuntu",
      "ami_name":       "taskcluster-docker-worker-{{user `fs_type`}}-{{user `update_type`}} {{timestamp}}",
      "tags": {
        "OS_Version":   "Ubuntu",
        "Release":      "Latest"
      }
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "output": "app.box",
      "keep_input_artifact": true
    }
  ]
}

