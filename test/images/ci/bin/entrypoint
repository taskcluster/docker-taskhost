#! /bin/bash -ex

checkout_path="$PWD/git_checkout"

# Run the checkout to the correct url, etc...
step_checkout() {
  if [ "$GITHUB_PULL_REQUEST" -ne "0" ];
  then
    time git ci-checkout-pr \
      $checkout_path \
      $GITHUB_BASE_GIT \
      $GITHUB_BASE_BRANCH \
      $GITHUB_BASE_REV \
      $GITHUB_HEAD_GIT \
      $GITHUB_HEAD_BRANCH \
      $GITHUB_HEAD_REV
  else
    time git ci-checkout-ref \
      $checkout_path \
      $GITHUB_HEAD_GIT \
      $GITHUB_HEAD_BRANCH \
      $GITHUB_HEAD_REV
  fi
}

# Checkout git repo
step_checkout

cd $checkout_path

# Display current revision
git --no-pager log -n 1

# Link busybox to worker
mkdir /worker
ln -s $checkout_path/bin-utils /worker/bin-utils
